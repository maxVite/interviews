{
  "name": "interview-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --parallel dev:client dev:server",
    "dev:client": "pnpm --filter client dev",
    "dev:server": "pnpm --filter server start:dev",
    "build": "pnpm --filter client build && pnpm --filter server build",
    "build:client": "pnpm --filter client build",
    "build:server": "pnpm --filter server build",
    "install:all": "pnpm install",
    "lint": "pnpm --parallel lint:client lint:server",
    "lint:client": "pnpm --filter client lint",
    "lint:server": "pnpm --filter server lint",
    "test": "pnpm --filter server test",
    "test:server": "pnpm --filter server test",
    "clean": "pnpm --parallel clean:client clean:server",
    "clean:client": "pnpm --filter client exec -- rm -rf dist node_modules/.vite",
    "clean:server": "pnpm --filter server exec -- rm -rf dist"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.15.1"
}
